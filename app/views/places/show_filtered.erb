<h2>My Places (filtered)</h2>

<ul class="indexList">
  <% @results.each do |place| %>
    <li id="placeLink"><a href="/places/<%=place.id%>"><%= place.name %></a>  -  <i>"<%= place.tagline %>"</i><br>
      <%= place.category.name %><br>
      Visited: <%=place.visited == 1 ? ("Yes"):("No")%><br>
      Recommendations:
      <ul>
        <% place.recommendations.each do |rec| %>
          <li><%=rec.name%></li>
        <% end %>
      </ul>
    </li>
    <br>
  <% end %>
</ul>

<form action="/places">
  <input type="submit" value="Back to All Places">
</form>