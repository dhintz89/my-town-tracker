<h2>My Places</h2>

<label>Quick Actions:</label><br>
<form class="button" action="/places/new">
  <input type="submit" value="New Place">
</form>

<form class="button" action="/places/filter">
  <input type="submit" value="Filter List">
</form>
<br>
<br>
<h3>Visited Status:</h3>
<div class="statusbar">
  <div class="statusfill" style="height:24px; <%if @status<34%>background-color: #cb1010 <%elsif @status<67%>background-color: #ecd318 <%else%> background-color:green<%end%>; width: <%=@status%>%"></div>
</div>

<ul class="indexList">
  <% user_places.each do |place| %>
    <li id="placeLink"><a href="/places/<%=place.id%>"><%= place.name %></a>  -  <i>"<%= place.tagline %>"</i><br>
      <%= place.category.name %><br>
      Visited: <%=place.visited == 1 ? ("Yes"):("No")%><br>
      Recommendations:
      <ul>
        <% place.recommendations.each do |rec| %>
          <li><%=rec.name%></li>
        <% end %>
      </ul>
    </li>
    <br>
  <% end %>
</ul>